{% extends 'base.html.twig' %}

{% block body %}

    <h1>
        {% block content_title %}{% endblock %}
    </h1>
    {% if app.request.hasPreviousSession %}
        {% for type, messages in app.session.flashbag.all() %}
            {% for message in messages %}
                <div class="alert alert-{{ type }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
    {% endif %}

    {% block content %}{% endblock %}
{% endblock %}